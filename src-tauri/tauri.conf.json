{
  "build": {
    "beforeDevCommand": "node src-tauri/scripts/before_dev.js && pnpm dev",
    "beforeBuildCommand": "node src-tauri/scripts/before_build.js && pnpm build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "./resources/obs.dll": "./obs.dll",
      "./resources/installation-updater.exe": "./installation-updater.exe"
    }
  },
  "productName": "Clipture",
  "mainBinaryName": "clipture",
  "version": "0.0.0",
  "identifier": "me.sshcrack.clipture",
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "clipture"
        ]
      }
    }
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Clipture",
        "label": "main",
        "width": 800,
        "height": 600,
        "visible": false,
        "focus": false,
        "url": "src/main.html"
      },
      {
        "title": "Bootstrap",
        "label": "bootstrap",
        "center": true,
        "closable": false,
        "resizable": false,
        "width": 300,
        "height": 150,
        "maximizable": false,
        "decorations": false,
        "url": "src/bootstrap.html"
      }
    ]
  }
}